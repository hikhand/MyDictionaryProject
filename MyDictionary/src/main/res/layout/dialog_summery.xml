<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="10dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/d1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/d2"
            android:background="@drawable/rectangle"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_below="@+id/d1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/d3"
            android:background="@drawable/rectangle"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_below="@+id/d2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/d4"
            android:background="@drawable/rectangle"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_below="@+id/d3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/d5"
            android:background="@drawable/rectangle"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_below="@+id/d4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Deck 1"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/d1"
            android:layout_alignBaseline="@+id/d1"
            android:padding="5dp"
            android:visibility="invisible"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Deck 2"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/d2"
            android:layout_alignBaseline="@+id/d2"
            android:padding="5dp"
            android:visibility="invisible"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Deck 3"
            android:id="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/d3"
            android:layout_alignBaseline="@+id/d3"
            android:padding="5dp"
            android:visibility="invisible"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Deck 4"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/d4"
            android:layout_alignBaseline="@+id/d4"
            android:padding="5dp"
            android:visibility="invisible"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Deck 5"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/d5"
            android:layout_alignBaseline="@+id/d5"
            android:padding="5dp"
            android:visibility="invisible"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total answers: "
            android:id="@+id/tAnswers"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="4dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total corrects"
            android:id="@+id/tCorrects"
            android:padding="4dp"
            android:layout_below="@+id/tAnswers"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total Incorrects: "
            android:id="@+id/tIncorrects"
            android:padding="4dp"
            android:layout_below="@+id/tCorrects"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total cards: "
            android:id="@+id/tCards"
            android:padding="4dp"
            android:layout_below="@+id/tIncorrects"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total days:  "
            android:id="@+id/tDays"
            android:padding="4dp"
            android:layout_below="@+id/tCards"
            android:layout_alignParentLeft="true"/>

</RelativeLayout>