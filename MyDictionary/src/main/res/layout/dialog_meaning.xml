<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dialog_meaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f2f2f2">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="9999"
            android:id="@+id/dmCount"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="false"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:padding="1dp"
            android:textColor="#4d551c"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="9999/99/99 99:99"
            android:id="@+id/dmDate"
            android:layout_alignParentTop="false"
            android:layout_marginRight="0dp"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:onClick="tvDateOnClick"
            android:paddingLeft="13dp"
            android:paddingRight="30dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="#232323"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="9999/99/99 99:99"
            android:id="@+id/dmLastDate"
            android:layout_alignParentTop="false"
            android:layout_marginRight="0dp"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:onClick="tvLastDateOnClick"
            android:paddingLeft="13dp"
            android:paddingRight="30dp"
            android:paddingTop="4dp"
            android:layout_below="@+id/dmDate"
            android:textColor="#232323"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:fillViewport="false"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            >

    </ScrollView>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#FFFFBB33"
            android:id="@+id/imageView"
            android:layout_below="@+id/dmLastDate"
            android:layout_marginTop="5dp"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_below="@+id/imageView"
            android:fillViewport="false"
            android:minHeight="50dp"
            >

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/dmWord"
                    android:layout_marginTop="10dp"
                    android:text="im the word im  im the word im"
                    android:textColor="#777577"
                    android:gravity="left"
                    android:maxHeight="170dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"
                    android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Meaning:"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/dmWord"
                    android:layout_marginTop="15dp"
                    android:textColor="#7a6c16"
                    android:layout_marginBottom="-3dp"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/dmMeaning"
                    android:text="and im the meaning and im the meaning and im the meaning and im the meaning"
                    android:textColor="#232323"
                    android:layout_below="@+id/textView3"
                    android:paddingLeft="5dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Examples: "
                    android:id="@+id/textView"
                    android:layout_below="@+id/dmMeaning"
                    android:layout_marginTop="15dp"
                    android:textColor="#7a6c16"
                    android:layout_marginBottom="-3dp"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="and im the meaning and im the meaning and im the meaning and im the meaning"
                    android:id="@+id/dmExample"
                    android:layout_below="@+id/textView"
                    android:textColor="#232323"
                    android:paddingLeft="5dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Tags:"
                    android:id="@+id/textView2"
                    android:layout_below="@+id/dmExample"
                    android:layout_marginTop="15dp"
                    android:textColor="#7a6c16"
                    android:layout_marginBottom="-3dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="tag1, tag2, tag3, tag4, tag5"
                    android:id="@+id/dmTags"
                    android:layout_below="@+id/textView2"
                    android:textColor="#5d355e"
                    android:paddingLeft="5dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>